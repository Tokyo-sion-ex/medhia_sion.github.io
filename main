                addedDate: '2023-10-15',
                category: 'music'
            },
            {
                id: '9bZkp7q19f0',
                title: 'PSY - GANGNAM STYLE (강남스타일) M/V',
                channel: 'officialpsy',
                views: '4.5B',
                date: '11年前',
                duration: '4:13',
                description: 'PSYの世界的ヒット曲「GANGNAM STYLE」の公式ミュージックビデオです。',
                addedDate: '2023-10-10',
                category: 'music'
            },
            {
                id: 'kJQP7kiw5Fk',
                title: 'Luis Fonsi - Despacito ft. Daddy Yankee',
                channel: 'LuisFonsiVEVO',
                views: '7.8B',
                date: '6年前',
                duration: '4:41',
                description: 'Luis Fonsiの「Despacito」公式ミュージックビデオです。',
                addedDate: '2023-10-05',
                category: 'music'
            },
            {
                id: 'JGwWNGJdvx8',
                title: 'Ed Sheeran - Shape of You [Official Video]',
                channel: 'Ed Sheeran',
                views: '5.7B',
                date: '6年前',
                duration: '4:23',
                description: 'Ed Sheeranの大ヒット曲「Shape of You」の公式ミュージックビデオです。',
                addedDate: '2023-09-28',
                category: 'music'
            },
            {
                id: 'fJ9rUzIMcZQ',
                title: 'Queen - Bohemian Rhapsody (Official Video Remastered)',
                channel: 'Queen Official',
                views: '1.8B',
                date: '4年前',
                duration: '5:55',
                description: 'Queenの名曲「Bohemian Rhapsody」の公式ミュージックビデオです。',
                addedDate: '2023-09-20',
                category: 'music'
            }
        ];

        // ローカルストレージから動画リストを読み込む、または初期リストを使用
        let videos = JSON.parse(localStorage.getItem('youtubeVideos')) || initialVideos;
        
        // DOM要素の取得
        const mainVideo = document.getElementById('main-video');
        const videoTitle = document.getElementById('video-title');
        const videoDescription = document.getElementById('video-description');
        const videoStats = document.getElementById('video-stats');
        const videoList = document.getElementById('video-list');
        const videoUrlInput = document.getElementById('video-url');
        const videoTitleInput = document.getElementById('video-title-input');
        const videoDescriptionInput = document.getElementById('video-description-input');
        const addBtn = document.getElementById('add-btn');
        const deleteCurrentVideoBtn = document.getElementById('delete-current-video');
        const successMessage = document.getElementById('success-message');
        const historyList = document.getElementById('history-list');
        
        // 現在再生中の動画のインデックスを追跡
        let currentVideoIndex = 0;
        
        // 動画リストの表示
        function renderVideoList() {
            videoList.innerHTML = '';
            
            videos.forEach((video, index) => {
                const videoCard = document.createElement('div');
                videoCard.className = 'video-card';
                
                videoCard.innerHTML = `
                    <div class="thumbnail-container">
                        <img src="https://img.youtube.com/vi/${video.id}/hqdefault.jpg" alt="${video.title}" class="thumbnail">
                        <div class="video-duration">${video.duration}</div>
                    </div>
                    <div class="video-card-details">
                        <div class="video-card-title">${video.title}</div>
                        <div class="video-card-channel">${video.channel}</div>
                        <div class="video-card-meta">${video.views} 回視聴 • ${video.date}</div>
                    </div>
                    <button class="video-card-delete" data-index="${index}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                
                videoCard.addEventListener('click', (e) => {
                    // 削除ボタンがクリックされた場合は処理を中断
                    if (e.target.closest('.video-card-delete')) {
                        return;
                    }
                    // 動画を再生
                    playVideo(video.id, video.title, video.channel, index, video.description);
                });
                
                // 削除ボタンのイベントリスナー
                const deleteBtn = videoCard.querySelector('.video-card-delete');
                deleteBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    deleteVideo(index);
                });
                
                videoList.appendChild(videoCard);
            });
        }
        
        // 履歴リストの表示
        function renderHistoryList() {
            historyList.innerHTML = '';
            
            if (videos.length === 0) {
                historyList.innerHTML = `
                    <div class="empty-history">
                        <i class="fas fa-history"></i>
                        <h3>履歴がありません</h3>
                        <p>動画を追加すると、ここに履歴が表示されます</p>
                    </div>
                `;
                return;
            }
            
            // 追加日でソート（新しい順）
            const sortedVideos = [...videos].sort((a, b) => {
                return new Date(b.addedDate) - new Date(a.addedDate);
            });
            
            sortedVideos.forEach((video, index) => {
                const historyItem = document.createElement('div');
                historyItem.className = 'history-item';
                
                historyItem.innerHTML = `
                    <div class="history-thumbnail">
                        <img src="https://img.youtube.com/vi/${video.id}/hqdefault.jpg" alt="${video.title}">
                    </div>
                    <div class="history-item-title">${video.title}</div>
                    <div class="history-item-meta">
                        <span>${video.channel}</span>
                        <span>${video.views} 回視聴</span>
                    </div>
                    <div class="history-item-date">追加日: ${formatDate(video.addedDate)}</div>
                `;
                
                historyItem.addEventListener('click', () => {
                    // 動画を再生
                    const videoIndex = videos.findIndex(v => v.id === video.id);
                    playVideo(video.id, video.title, video.channel, videoIndex, video.description);
                    // ホームページに移動
                    sidebarItems.forEach(i => i.classList.remove('active'));
                    document.querySelector('.sidebar-item[data-page="home"]').classList.add('active');
                    homePage.style.display = 'flex';
                    addVideoPage.style.display = 'none';
                    historyPage.style.display = 'none';
                    searchResultsPage.style.display = 'none';
                });
                
                historyList.appendChild(historyItem);
            });
        }
        
        // 日付フォーマット関数
        function formatDate(dateString) {
            const date = new Date(dateString);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}年${month}月${day}日`;
        }
        
        // 動画を再生する関数
        function playVideo(videoId, title, channel, index, description) {
            mainVideo.src = `https://www.youtube.com/embed/${videoId}`;
            videoTitle.textContent = title;
            videoDescription.textContent = description || `${channel}の公式ミュージックビデオです。この動画はYouTube風プレイヤーで再生されています。`;
            videoStats.innerHTML = `<span>${Math.floor(Math.random() * 10) + 1}M 回視聴</span> • <span>${Math.floor(Math.random() * 5) + 1}年前</span>`;
            currentVideoIndex = index;
        }
        
        // 動画を追加する関数
        function addVideo() {
            const url = videoUrlInput.value.trim();
            const title = videoTitleInput.value.trim();
            const description = videoDescriptionInput.value.trim();
            
            if (!url || !title) {
                alert('URLとタイトルを入力してください');
                return;
            }
            
            // YouTubeのURLから動画IDを抽出
            let videoId = '';
            
            // 様々なYouTube URL形式に対応
            if (url.includes('youtube.com/watch?v=')) {
                videoId = url.split('v=')[1];
                const ampersandPosition = videoId.indexOf('&');
                if (ampersandPosition !== -1) {
                    videoId = videoId.substring(0, ampersandPosition);
                }
            } else if (url.includes('youtu.be/')) {
                videoId = url.split('youtu.be/')[1];
                const questionMarkPosition = videoId.indexOf('?');
                if (questionMarkPosition !== -1) {
                    videoId = videoId.substring(0, questionMarkPosition);
                }
            } else if (url.match(/^[a-zA-Z0-9_-]{11}$/)) {
                // 動画IDのみが入力された場合
                videoId = url;
            } else {
                alert('有効なYouTube動画URLを入力してください');
                return;
            }
            
            // 現在の日付を取得
            const currentDate = new Date().toISOString().split('T')[0];
            
            // 動画リストに追加
            const newVideo = {
                id: videoId,
                title: title,
                channel: 'あなたのチャンネル',
                views: '0',
                date: '今日',
                duration: '0:00',
                description: description || '説明がありません',
                addedDate: currentDate,
                category: 'music'
            };
            
            videos.unshift(newVideo);
            localStorage.setItem('youtubeVideos', JSON.stringify(videos));
            
            // リストを再表示
            renderVideoList();
            
            // 成功メッセージを表示
            successMessage.classList.add('active');
            
            // 3秒後に成功メッセージを非表示
            setTimeout(() => {
                successMessage.classList.remove('active');
            }, 3000);
            
            // 入力フィールドをクリア
            videoUrlInput.value = '';
            videoTitleInput.value = '';
            videoDescriptionInput.value = '';
            
            // ホームページに戻る
            sidebarItems.forEach(i => i.classList.remove('active'));
            document.querySelector('.sidebar-item[data-page="home"]').classList.add('active');
            homePage.style.display = 'flex';
            addVideoPage.style.display = 'none';
            historyPage.style.display = 'none';
            searchResultsPage.style.display = 'none';
            
            // 追加した動画を再生
            playVideo(newVideo.id, newVideo.title, newVideo.channel, 0, newVideo.description);
        }
        
        // 動画を削除する関数
        function deleteVideo(index) {
            if (videos.length <= 1) {
                alert('最後の動画は削除できません');
                return;
            }
            
            if (confirm('この動画を削除しますか？')) {
                videos.splice(index, 1);
                localStorage.setItem('youtubeVideos', JSON.stringify(videos));
                
                // リストを再表示
                renderVideoList();
                
                // 削除した動画が現在再生中の動画だった場合
                if (index === currentVideoIndex) {
                    // 最初の動画を再生
                    playVideo(videos[0].id, videos[0].title, videos[0].channel, 0, videos[0].description);
                } else if (index < currentVideoIndex) {
                    // 現在のインデックスを調整
                    currentVideoIndex--;
                }
            }
        }
        
        // 現在再生中の動画を削除する関数
        function deleteCurrentVideo() {
            deleteVideo(currentVideoIndex);
        }
        
        // イベントリスナーの設定
        addBtn.addEventListener('click', addVideo);
        deleteCurrentVideoBtn.addEventListener('click', deleteCurrentVideo);
        
        // 初期表示
        renderVideoList();
        if (videos.length > 0) {
            playVideo(videos[0].id, videos[0].title, videos[0].channel, 0, videos[0].description);
        }
    </script>
</body>
</html>
