    <!-- 設定メニュー -->
    <div class="settings-menu" id="settings-menu">
        <h3 class="settings-title">カラーテーマ</h3>
        <div class="theme-options">
            <div class="theme-option theme-red-option active" data-theme="red"></div>
            <div class="theme-option theme-blue-option" data-theme="blue"></div>
            <div class="theme-option theme-green-option" data-theme="green"></div>
            <div class="theme-option theme-yellow-option" data-theme="yellow"></div>
            <div class="theme-option theme-black-option" data-theme="black"></div>
        </div>
    </div>

    <script>
        // テーマ切り替え機能
        const themeToggle = document.getElementById('theme-toggle');
        const themeIcon = themeToggle.querySelector('i');
        
        // ローカルストレージからテーマ設定を読み込む
        const currentTheme = localStorage.getItem('theme') || 'dark';
        const currentColorTheme = localStorage.getItem('colorTheme') || 'red';
        
        // 初期テーマ設定
        if (currentTheme === 'light') {
            document.body.classList.remove('dark-mode');
            document.body.classList.add('light-mode');
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        }
        
        // 初期カラーテーマ設定
        document.body.classList.add(`theme-${currentColorTheme}`);
        document.querySelector(`.theme-${currentColorTheme}-option`).classList.add('active');
        
        // テーマ切り替え
        themeToggle.addEventListener('click', () => {
            if (document.body.classList.contains('light-mode')) {
                // ダークモードに切り替え
                document.body.classList.remove('light-mode');
                document.body.classList.add('dark-mode');
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
                localStorage.setItem('theme', 'dark');
            } else {
                // ライトモードに切り替え
                document.body.classList.remove('dark-mode');
                document.body.classList.add('light-mode');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
                localStorage.setItem('theme', 'light');
            }
        });

        // 設定メニュー表示/非表示
        const settingsButton = document.getElementById('settings-button');
        const settingsMenu = document.getElementById('settings-menu');
        
        settingsButton.addEventListener('click', () => {
            settingsMenu.classList.toggle('active');
        });

        // カラーテーマ変更
        const themeOptions = document.querySelectorAll('.theme-option');
        
        themeOptions.forEach(option => {
            option.addEventListener('click', () => {
                const theme = option.getAttribute('data-theme');
                
                // アクティブなテーマを更新
                themeOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                
                // テーマを適用
                document.body.classList.remove('theme-red', 'theme-blue', 'theme-green', 'theme-yellow', 'theme-black');
                document.body.classList.add(`theme-${theme}`);
                
                // ローカルストレージに保存
                localStorage.setItem('colorTheme', theme);
            });
        });

        // ページ切り替え機能
        const sidebarItems = document.querySelectorAll('.sidebar-item');
        const homePage = document.getElementById('home-page');
        const addVideoPage = document.getElementById('add-video-page');
        const historyPage = document.getElementById('history-page');
        const searchResultsPage = document.getElementById('search-results-page');
        
        sidebarItems.forEach(item => {
            item.addEventListener('click', () => {
                // アクティブなアイテムを更新
                sidebarItems.forEach(i => i.classList.remove('active'));
                item.classList.add('active');
                
                // ページを切り替え
                const page = item.getAttribute('data-page');
                if (page === 'home') {
                    homePage.style.display = 'flex';
                    addVideoPage.style.display = 'none';
                    historyPage.style.display = 'none';
                    searchResultsPage.style.display = 'none';
                } else if (page === 'add-video') {
                    homePage.style.display = 'none';
                    addVideoPage.style.display = 'block';
                    historyPage.style.display = 'none';
                    searchResultsPage.style.display = 'none';
                } else if (page === 'history') {
                    homePage.style.display = 'none';
                    addVideoPage.style.display = 'none';
                    historyPage.style.display = 'block';
                    searchResultsPage.style.display = 'none';
                    renderHistoryList();
                }
                
                // 設定メニューを閉じる
                settingsMenu.classList.remove('active');
            });
        });

        // 操作説明表示/非表示機能
        const helpButton = document.getElementById('help-button');
        const helpOverlay = document.getElementById('help-overlay');
        
        helpButton.addEventListener('click', () => {
            helpOverlay.classList.toggle('active');
        });

        // HTML Cafe風検索機能
        const searchInput = document.getElementById('search-input');
        const searchButton = document.getElementById('search-button');
        const searchSuggestions = document.getElementById('search-suggestions');
        
        // 検索履歴
        let searchHistory = JSON.parse(localStorage.getItem('searchHistory')) || [];
        
        // 検索サジェスト表示
        searchInput.addEventListener('input', function() {
            const query = this.value.trim();
            
            if (query.length === 0) {
                searchSuggestions.classList.remove('active');
                return;
            }
            
            // 検索サジェストを生成
            const suggestions = generateSearchSuggestions(query);
            renderSearchSuggestions(suggestions, query);
        });
        
        // 検索ボタンクリック時の処理
        searchButton.addEventListener('click', performSearch);
        
        // Enterキーでの検索
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                performSearch();
            }
        });
        
        // クリックでサジェストを閉じる
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.search-bar')) {
                searchSuggestions.classList.remove('active');
            }
        });
        
        function generateSearchSuggestions(query) {
            const lowerCaseQuery = query.toLowerCase();
            const suggestions = new Set();
            
            // 動画タイトルからサジェスト
            videos.forEach(video => {
                if (video.title.toLowerCase().includes(lowerCaseQuery)) {
                    suggestions.add(video.title);
                }
            });
            
            // チャンネル名からサジェスト
            videos.forEach(video => {
                if (video.channel.toLowerCase().includes(lowerCaseQuery)) {
                    suggestions.add(video.channel);
                }
            });
            
            // 検索履歴からサジェスト
            searchHistory.forEach(history => {
                if (history.toLowerCase().includes(lowerCaseQuery)) {
                    suggestions.add(history);
                }
            });
            
            // 一般的な検索サジェスト
            const commonSuggestions = [
                `${query} 音楽`,
                `${query} 公式`,
                `${query} フル`,
                `${query} カバー`,
                `${query} ライブ`
            ];
            
            commonSuggestions.forEach(suggestion => {
                suggestions.add(suggestion);
            });
            
            return Array.from(suggestions).slice(0, 8); // 最大8件
        }
        
        function renderSearchSuggestions(suggestions, query) {
            searchSuggestions.innerHTML = '';
            
            if (suggestions.length === 0) {
                searchSuggestions.classList.remove('active');
                return;
            }
            
            // 検索履歴を表示
            if (searchHistory.length > 0 && query.length === 0) {
                searchHistory.slice(0, 5).forEach(history => {
                    const suggestionItem = document.createElement('div');
                    suggestionItem.className = 'suggestion-item';
                    suggestionItem.innerHTML = `
                        <i class="fas fa-history"></i>
                        <div class="suggestion-text">${history}</div>
                    `;
                    suggestionItem.addEventListener('click', () => {
                        searchInput.value = history;
                        performSearch();
                    });
                    searchSuggestions.appendChild(suggestionItem);
                });
            } else {
                // 検索サジェストを表示
                suggestions.forEach(suggestion => {
                    const suggestionItem = document.createElement('div');
                    suggestionItem.className = 'suggestion-item';
                    suggestionItem.innerHTML = `
                        <i class="fas fa-search"></i>
                        <div class="suggestion-text">${suggestion}</div>
                    `;
                    suggestionItem.addEventListener('click', () => {
                        searchInput.value = suggestion;
                        performSearch();
                    });
                    searchSuggestions.appendChild(suggestionItem);
                });
            }
            
            searchSuggestions.classList.add('active');
        }
        
        function performSearch() {
            const query = searchInput.value.trim();
            
            if (query === '') {
                alert('検索キーワードを入力してください');
                return;
            }
            
            // 検索履歴に追加
            if (!searchHistory.includes(query)) {
                searchHistory.unshift(query);
                if (searchHistory.length > 10) {
                    searchHistory.pop();
                }
                localStorage.setItem('searchHistory', JSON.stringify(searchHistory));
            }
            
            // 検索実行
            const searchResults = searchVideos(query);
            
            // 検索結果ページを表示
            homePage.style.display = 'none';
            addVideoPage.style.display = 'none';
            historyPage.style.display = 'none';
            searchResultsPage.style.display = 'block';
            
            // サイドバーのアクティブ状態をリセット
            sidebarItems.forEach(i => i.classList.remove('active'));
            
            // 検索結果を表示
            renderSearchResults(searchResults, query);
            
            // サジェストを閉じる
            searchSuggestions.classList.remove('active');
        }
        
        function searchVideos(query) {
            const lowerCaseQuery = query.toLowerCase();
            
            const results = videos.filter(video => {
                const titleMatch = video.title.toLowerCase().includes(lowerCaseQuery);
                const channelMatch = video.channel.toLowerCase().includes(lowerCaseQuery);
                const descriptionMatch = video.description.toLowerCase().includes(lowerCaseQuery);
                
                return titleMatch || channelMatch || descriptionMatch;
            });
            
            return results;
        }
        
        function renderSearchResults(results, query) {
            const searchResultsList = document.getElementById('search-results-list');
            const searchResultsCount = document.getElementById('search-results-count');
            
            // 検索結果数を表示
            searchResultsCount.textContent = `「${query}」の検索結果 ${results.length}件`;
            
            if (results.length === 0) {
                searchResultsList.innerHTML = `
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <h3>検索結果が見つかりません</h3>
                        <p>別のキーワードで検索してみてください</p>
                    </div>
                `;
                return;
            }
            
            searchResultsList.innerHTML = '';
            
            results.forEach((video, index) => {
                const resultItem = document.createElement('div');
                resultItem.className = 'history-item';
                
                resultItem.innerHTML = `
                    <div class="history-thumbnail">
                        <img src="https://img.youtube.com/vi/${video.id}/hqdefault.jpg" alt="${video.title}">
                    </div>
                    <div class="history-item-title">${video.title}</div>
                    <div class="history-item-meta">
                        <span>${video.channel}</span>
                        <span>${video.views} 回視聴</span>
                    </div>
                    <div class="history-item-date">${video.date}</div>
                `;
                
                resultItem.addEventListener('click', () => {
                    // 動画を再生
                    const videoIndex = videos.findIndex(v => v.id === video.id);
                    playVideo(video.id, video.title, video.channel, videoIndex, video.description);
                    // ホームページに移動
                    sidebarItems.forEach(i => i.classList.remove('active'));
                    document.querySelector('.sidebar-item[data-page="home"]').classList.add('active');
                    homePage.style.display = 'flex';
                    addVideoPage.style.display = 'none';
                    historyPage.style.display = 'none';
                    searchResultsPage.style.display = 'none';
                });
                
                searchResultsList.appendChild(resultItem);
            });
        }

        // 初期動画リスト
        const initialVideos = [
            {
                id: 'dQw4w9WgXcQ',
                title: 'Never Gonna Give You Up - Rick Astley (Official Music Video)',
                channel: 'Rick Astley Official',
                views: '1.2M',
